doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/stylesheets/style.css')
    title= title
  body.flex-col
    header
      nav.navbar
        ul.flex.wrapper
          li.nav-home
            a(href="/") MembersOnly  
          if !currentUser 
            li 
              a.nav-link(href="/sign-up") Sign Up
            li 
              a.nav-link(href="/log-in") Log In
          else 
            li
              a(href="/message/new") New Message
            li 
              p= currentUser.firstName
              p= currentUser.email
              a(href="/log-out") Log Out
    main.wrapper
      block content

    block foot
      footer.flex
        span Copyright Â© 2023
        a(href='https://github.com/cjfaquino', target='_blank', rel='noreferrer') cjfaquino
        img(src="/images/github-mark.svg", alt="github icon")
