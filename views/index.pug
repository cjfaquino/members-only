extends layout

block content
  h1= title
  p Welcome to #{title}
  if currentUser
    p Welcome #{currentUser.firstName}
  ul 
    for msg in messages 
      li 
        h2= msg.title 
        p= msg.text
        div 
          if currentUser && currentUser.membership
            p= msg.timestamp
            p= msg.author.fullName
          else 
            p #[strong Note]: Become a member to know who wrote this message and when.