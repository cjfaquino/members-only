extends layout 

block content 
  h1= title 
  form(action="", method="post") 
    label(for="secret") Secret Key 
      input#secret(type="text", name="secret" placeholder=`Enter "${title.toUpperCase()}" secret key...`)
    button(type="submit") Submit
  
  if errors 
    ul 
      for err in errors 
        li!= err.msg